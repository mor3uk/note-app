import java.util.Scanner;

class solver {
	  public static void main (String[] args) {
	    Scanner sc = new Scanner(System.in);
	    
	    String str = sc.nextLine();
	    StringBuilder strId = new StringBuilder(str);
	    
	    for (int i = 0; i < strId.length(); i++) {
	    	if (strId.charAt(i) == '_' ) {
	    		strId = changeIntoJava(strId);
	    		break;
	    	} else if ((int) strId.charAt(i) > 64 && (int) strId.charAt(i) < 91) {
	    		strId = changeIntoC(strId);
	    		break;
	    	}
	    }
	    
	    System.out.println(strId);
	    
	  }
	  
	  public static StringBuilder changeIntoJava (StringBuilder strId) {
		  char tempC;
		  int tempI;
		  
		  for (int i = 0; i < strId.length(); i++) {
			  if (strId.charAt(i) == '_') {
				  strId.delete(i, i + 1);
				  
				  tempC = strId.charAt(i);
				  tempI = (int) tempC - 32;
				  strId.setCharAt(i, (char) tempI);
			  }
		  }
		  
		  return strId;
	  }
	  
	  public static StringBuilder changeIntoC (StringBuilder strId) {
		  char tempC;
		  int tempI;
		  
		  for (int i = 0; i < strId.length(); i++) {
			  if ((int) strId.charAt(i) > 64 && (int) strId.charAt(i) < 91) {
				  tempC = strId.charAt(i);
				  tempI = (int) tempC + 32;
				  strId.setCharAt(i, (char) tempI);
				  
				  strId.insert(i, '_');
			  }
		  }
		  
		  return strId;
	  }
	  
} 
